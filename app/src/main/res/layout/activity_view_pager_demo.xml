<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ViewPagerDemo.ViewPagerDemo">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/img_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:backgroundTint="@color/purple_200"
            android:id="@+id/weatherViewPager"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather app" />
        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/racipeViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Racipe app" />

        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/infinitViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Infinite ViewPager Demo" />

        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/chatApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Infinite ViewPager Demo" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>