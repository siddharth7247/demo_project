<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/img_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:backgroundTint="@color/purple_200"
            android:id="@+id/intentDemo"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intent Demo" />
        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/constraintLayoutDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Constraint Layout Demo" />
        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/viewsDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Views Demo" />

        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/drawableDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drawable Demo" />
        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/viewPagerDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Pager Demo" />
        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/listViewDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListView Demo" />
        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/recyclerViewDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecyclerView Demo" />
        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/cordinatorLayoutDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cordinator Layout Demo" />
        <Button
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/snackBarDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SnackBar Demo" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>