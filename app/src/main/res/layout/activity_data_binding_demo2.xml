<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="student"
            type="DataBindingDemo.Student" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="DataBindingDemo.DataBindingDemo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:src="@{student.img}" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/textboxstyal"
                android:drawableLeft="@drawable/person"
                android:fontFamily="@font/agbalumo"
                android:hint="Name"
                android:padding="7dp"
                android:text="@{student.name}"
                android:textSize="@dimen/text_size"
                tools:ignore="SpUsage" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/textboxstyal"
                android:drawableLeft="@drawable/person"
                android:fontFamily="@font/protest"
                android:hint="surname"
                android:padding="7dp"
                android:text="@{student.surname}"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/textboxstyal"
                android:drawableLeft="@drawable/person"
                android:fontFamily="@font/protest"
                android:hint="Email"
                android:padding="7dp"
                android:text="@{student.email}"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/textboxstyal"
                android:drawableLeft="@drawable/person"
                android:fontFamily="@font/protest"
                android:hint="Age"
                android:padding="7dp"
                android:text="@{String.valueOf(student.birthDate)}"

                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/textboxstyal"
                android:drawableLeft="@drawable/person"
                android:fontFamily="@font/protest"
                android:hint="Address"
                android:padding="7dp"
                android:text="@{student.address}"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnstyle"
                    android:fontFamily="@font/protest"
                    android:onClick="@{() -> student.onclick(student)}"
                    android:text="Calculate age"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnstyle"
                    android:fontFamily="@font/protest"
                    android:text="Reset"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>