<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SharedPrefrencesDemo.UserProfileActivity">

    <TextView
        android:id="@+id/userDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--- Profile ---"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:text="FirstName"
        android:id="@+id/firstName"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userDetails"
        app:layout_constraintStart_toStartOf="@id/userDetails"
        app:layout_constraintEnd_toEndOf="@id/userDetails"/>

    <TextView
        android:text="LastName"
        android:id="@+id/lastName1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstName"
        app:layout_constraintStart_toStartOf="@id/firstName"
        app:layout_constraintEnd_toEndOf="@id/firstName"/>

    <TextView
        android:text="Email"
        android:id="@+id/email"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lastName1"
        app:layout_constraintStart_toStartOf="@id/lastName1"
        app:layout_constraintEnd_toEndOf="@id/lastName1"/>

    <TextView
        android:text="Phone"
        android:id="@+id/phone"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/email"/>

    <TextView
        android:text="Address"
        android:id="@+id/address"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintStart_toStartOf="@id/phone"
        app:layout_constraintEnd_toEndOf="@id/phone"/>

    <Button
        android:id="@+id/btnLogout"
        android:text="Logout"
        android:background="@drawable/btnstyle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintStart_toStartOf="@id/address"
        app:layout_constraintEnd_toEndOf="@id/address"/>

</androidx.constraintlayout.widget.ConstraintLayout>